# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/alphasharp
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/alphasharp?retryWrites=true&w=majority

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRE=30d

# Session Secret
SESSION_SECRET=your-session-secret-change-this

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Python API (Deployed on Render)
PYTHON_API_URL=https://finance-v1-kyu7.onrender.com
PYTHON_API_TIMEOUT=90000

# Cache Settings
CACHE_STOCK_ANALYSIS_TTL=300
CACHE_MARKET_NEWS_TTL=600
CACHE_MARKET_REGIME_TTL=3600
CACHE_FORECAST_TTL=3600

# Keep-Alive Settings
ENABLE_KEEP_ALIVE=true
KEEP_ALIVE_INTERVAL=13

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
